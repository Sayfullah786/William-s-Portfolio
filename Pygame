import pygame
pygame.init()

screen = pygame.display.set_mode((500,500))

screen.fill([0,0,255])

clock = pygame.time.Clock()

player_x = 250
player_y = 250
player_width = 50
player_height = 50


while True:
     for event in pygame.event.get():
         if event.type == pygame.QUIT:
             pygame.quit()

     keys = pygame.key.get_pressed()
     if keys[pygame.K_w]                  #if you press the w key ....
        player_y -=10                     #the y cordinate is changed by + 10
     screen.fill([0,0,225])               #fills in the gap to the backround coular after u move

     keys = pygame.key.get_pressed()
     if keys[pygame.K_s]:                #if you press the s key ....
         player_y +=  10                 #the y cordinate is changed by - 10
     screen.fill([0, 0, 225])            #fills in the gap to the back round coular after u move

     keys = pygame.key.get_pressed()
     if keys[pygame.K_a]:                #if you press the a .....
         player_x -= 10                  #the x corniate is changed by + 10
     screen.fill([0, 0, 225])            #fills in the gap to the back round coular after u move

     keys = pygame.key.get_pressed()
     if keys[pygame.K_d]:
         player_x += 10
     screen.fill([0, 0, 225])



     player = pygame.Rect(player_x,player_y,player_width,player_height)
     pygame.draw.rect(screen,(41,41,41,),player)
     pygame.display.flip()
     clock.tick(60)
